# Tint2 config file
# Generated by tintwizard (http://code.google.com/p/tintwizard/)
# For information on manually configuring tint2 see http://code.google.com/p/tint2/wiki/Configure

# Background definitions
# ID 1
rounded = 3
border_width = 1
background_color = #2F2F2F 71
border_color = #3C3737 100

# ID 2
rounded = 7
border_width = 0
background_color = #35BF5C 64
border_color = #0A2010 100

# Panel
panel_monitor = 1
panel_position = top center horizontal
panel_size = 90% 25
panel_margin = 0 0
panel_padding = 0 0 4
panel_dock = 0
wm_menu = 1
panel_layer = bottom
panel_background_id = 0

# Panel Autohide
autohide = 0
autohide_show_timeout = 0.3
autohide_hide_timeout = 2
autohide_height = 5
strut_policy = follow_size

# Taskbar
taskbar_mode = single_desktop
taskbar_padding = 0 0 6
taskbar_background_id = 1
#taskbar_active_background_id = 0

# Tasks
urgent_nb_of_blink = 7
task_icon = 1
task_text = 1
task_centered = 1
task_maximum_size = 175 32
task_padding = 6 3
task_background_id = 0
task_active_background_id = 1
task_urgent_background_id = 2
task_iconified_background_id = 0

# Task Icons
task_icon_asb = 100 0 0
task_active_icon_asb = 100 0 0
task_urgent_icon_asb = 100 0 0
task_iconified_icon_asb = 40 0 0

# Fonts
task_font = Zekton 8
task_font_color = #DEDEDE 80
task_active_font_color = #37BF5D 80
task_urgent_font_color = #DEDEDE 80
task_iconified_font_color = #DEDEDE 80
font_shadow = 0

# System Tray
systray = 1
systray_padding = 2 2 4
systray_sort = ascending
systray_background_id = 1
systray_icon_size = 20
systray_icon_asb = 70 0 0

# Clock
time1_format = %H:%M
time1_font = Zekton 8
time2_format = %a %d %b
time2_font = Zekton 8
clock_font_color = #DEDEDE 100
clock_padding = 0 0
clock_background_id = 1

# Tooltips
tooltip = 1
tooltip_padding = 2 2
tooltip_show_timeout = 0.7
tooltip_hide_timeout = 0.3
tooltip_background_id = 1
tooltip_font = Zekton 9
tooltip_font_color = #DEDEDE 100

# Mouse
mouse_middle = none
mouse_right = close
mouse_scroll_up = toggle
mouse_scroll_down = iconify

# Battery
battery = 1
battery_low_status = 10
battery_low_cmd = notify-send "battery low"
battery_hide = 0
bat1_font = Zekton 8
bat2_font = Zekton 8
battery_font_color = #DEDEDE 100
battery_padding = 3 1
battery_background_id = 1

# End of config